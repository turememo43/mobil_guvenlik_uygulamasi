<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/childEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Email"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/childRoleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Role"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/sendNotificationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bildirim Gönder" />

        <Button
            android:id="@+id/viewLocationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Konum Gör" />
    </LinearLayout>
</LinearLayout>
